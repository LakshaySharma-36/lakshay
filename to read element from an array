//to read element from user(array).
#include<stdio.h>
int main ()
{
    system("cls");
    int n;
    printf("enter an array size: ");
    scanf("%d",&n);
    int marks[n];
    //logic to read elements of an array from the user.
    printf("enter elements: ");
    for(int i=0; i<n; i++){
        scanf("%d",&marks[i]);
    }
    //logic to print elements of an array.
    printf("array elements are: ");
    for(int i = 0; i<n; i++){
        printf("%d ", marks[i]);
    }
    return 0;
}    
